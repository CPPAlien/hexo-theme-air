<% if (config.disqus_shortname){ %>
<script type="text/javascript">
var disqus_shortname = '<%= config.disqus_shortname %>';

(function(){
  var dsq = document.createElement('script');
  dsq.type = 'text/javascript';
  dsq.async = true;
  dsq.src = '//' + disqus_shortname + '.disqus.com/<% if (page.comments){ %>embed.js<% } else { %>count.js<% } %>';
  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
}());
</script>
<% } %>

<% if (theme.fancybox){ %>
<link rel="stylesheet" href="<%- config.root %>fancybox/jquery.fancybox.css" media="screen" type="text/css">
<script src="<%- config.root %>fancybox/jquery.fancybox.pack.js"></script>
<script type="text/javascript">
(function($){
  $('.fancybox').fancybox();

  function goTop() {
      $(window).scroll(function(e) {
          // If the distance between scrollbar and top border is more than 100 pix
          if($(window).scrollTop() > 100)
              $("#go-pg-top").fadeIn().css({ opacity: 0.6 });
          else
              $("#go-pg-top").fadeOut();
      });
  };

  $("#go-pg-top").click(function(e) {
          $('body,html').animate({scrollTop:0}, 200);
  });
  $("#go-pg-top").mouseover(function(e) {
      $(this).css({ opacity: 1 });
  });
  $("#go-pg-top").mouseout(function(e) {
      $(this).css({ opacity: 0.6 });
  });
  // Scroll to top
  goTop();

})(jQuery);
</script>
<% } %>